{
  "manifest_version": 2,

  "name": "Trapeze popup",
  "description": "This extension shows how Trapeze will be used to save info from travel sites",
  "version": "1.9",
  "background": {
      "persistent": true,
      "scripts": [
        "background.js"
      ]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>",
    "https://ajax.googleapis.com/"
  ]
}
